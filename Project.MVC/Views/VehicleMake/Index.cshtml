@model IEnumerable<Project.MVC_.ViewModels.VehicleMakeViewModel>
@{
    ViewBag.Title = "Vehicle Makes";
}

<h2>Vehicle Makes</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    @Html.ActionLink("Create New Make", "Create")
</p>

@using (Html.BeginForm("Index", "VehicleMake", FormMethod.Get))
{
    <p>
        Search: @Html.TextBox("search", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.CurrentSort == "name_desc" ? "" : "name_desc", search = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Abbreviation", "Index", new { sortOrder = ViewBag.CurrentSort == "abrv" ? "abrv_desc" : "abrv", search = ViewBag.CurrentFilter })
            </th>
            <th>Actions</th>
            <th>Models</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Abrv</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink(
                        "View Models",          // Link text
                        "Index",                // Action
                        "VehicleModel",         // Controller
                        new { makeId = item.Id }, // Route values
                        null                    // htmlAttributes
                    )
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int nextPage = page + 1;
    int prevPage = page - 1;
}
<nav>
    <ul class="pagination">
        @if (page > 1)
        {
            <li><a href="@Url.Action("Index", new { page = prevPage, search = ViewBag.CurrentFilter, sortOrder = ViewBag.CurrentSort })">&laquo; Previous</a></li>
        }
        <li class="active"><span>@page</span></li>
        <li><a href="@Url.Action("Index", new { page = nextPage, search = ViewBag.CurrentFilter, sortOrder = ViewBag.CurrentSort })">Next &raquo;</a></li>
    </ul>
</nav>