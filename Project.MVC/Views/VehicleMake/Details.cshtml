@model Project.MVC_.ViewModels.VehicleMakeViewModel

@{
    ViewBag.Title = "Vehicle Make Details";
}

<h2>Vehicle Make Details</h2>

<div class="form-group">
    <label>Name:</label>
    <span>@Model.Name</span>
</div>
<div class="form-group">
    <label>Abbreviation:</label>
    <span>@Model.Abrv</span>
</div>

<div class="mt-3">
    <a href="@Url.Action("Edit", "VehicleMake", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Delete", "VehicleMake", new { id = Model.Id })" class="btn btn-danger">Delete</a>
    <a href="@Url.Action("Index", "VehicleMake")" class="btn btn-secondary">Back to Makes</a>
    <a href="@Url.Action("Index", "VehicleModel")" class="btn btn-secondary">Go to Models</a>
</div>