@model Project.MVC_.ViewModels.VehicleModelViewModel

@{
    ViewBag.Title = "Delete Vehicle Model";
}

<h2>Delete Vehicle Model</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this Vehicle Model?
</div>

<div class="form-group">
    <label>Name:</label>
    <span>@Model.Name</span>
</div>
<div class="form-group">
    <label>Abbreviation:</label>
    <span>@Model.Abrv</span>
</div>
<div class="form-group">
    <label>Make:</label>
    <span>@Model.MakeName</span>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "VehicleModel")" class="btn btn-secondary">Back to List</a>
}