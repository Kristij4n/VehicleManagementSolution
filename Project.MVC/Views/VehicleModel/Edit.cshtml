@model Project.MVC_.ViewModels.VehicleModelViewModel

@{
    ViewBag.Title = "Edit Vehicle Model";
}

<h2>Edit Vehicle Model</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Abrv)
            @Html.TextBoxFor(model => model.Abrv, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MakeId, "Make")
            @Html.DropDownList("MakeId", ViewBag.Makes as SelectList, "Select Make", new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
